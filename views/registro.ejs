<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Registro</title>
  <%- include ('partials/styles') %>
</head>

<!-- Navigation-->
<%- include ('partials/navbarreg') %>

  <body style="background-color: #F0F2F5;">
    <nav class="navbar navbar-expand-md fixed-top" style="background-color: #F4623A;">

      <a class="navbar-brand" href="/" style="color:white">
        <img src="images/logo.png" alt="" width="40%" class="d-inline-block align-top">
      </a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault"
        aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarsExampleDefault">
        <form class="form-inline my-2 my-lg-0 ml-auto">
          <select class="form-select" aria-label="Default select example"
            style="border-radius: 15px; border-color:white; color: #F4623A; background-color: white; padding: 5px;">
            <option selected>Usuario</option>
            <option value="1">One</option>
            <option value="2">Two</option>
            <option value="3">Three</option>
          </select>
        </form>
      </div>
    </nav>
    <!-- Inicio del form -->

    <body style="background-color: #FAFAFA;">
      <div class="card" style="width: 30rem; margin-left: auto; margin-right: auto; margin-top: 70px;">
        <h2 style="margin-left: auto; margin-right: auto; margin-top: 10px;">NOVA</h2>
        <div class="card-body">
          <form action="/agregarUsuario" method="POST">
            <div class="form-row">
              <div class="form-group col-12">
                <label for="empresa">Nombre de la empresa</label>
                <input type="text" placeholder="Introduce el nombre de la empresa." class="form-control" name="user">
              </div>
              <div class="form-group col-12">
                <label for="email">Email</label>
                <input type="email" placeholder="Introduce el email de la empresa." class="form-control" name="email">
              </div>
              <div class="form-group col-md-6">
                <label for="password">Contraseña</label>
                <input type="password" placeholder="Introduce la contraseña" class="form-control" name="password">
              </div>
              <div class="form-group col-md-6">
                <label for="password1">Confirma la contraseña</label>
                <input type="password" placeholder="Confirma la contraseña" class="form-control" name="password1">
              
            </div>
          </div>
          <div class="form-group">
            <label for="telefono">Teléfono</label>
            <input type="text" class="form-control" name="telefono" placeholder="Introduce el número telefónico">
          </div>
          <div class="form-group">
            <label for="direccion">Dirección</label>
            <input type="text" class="form-control" name="direccion" placeholder="Introduce la dirección de la empresa">
          </div>
          <button type="submit" class="btn btn-primary form-control">Registrar</button>
          </form>
        </div>
      </div>

      <!-- fin del nav -->

      <!-- Bootstrap core JS-->
      <script src="https://code.jquery.com/jquery-3.5.1.js"
        integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc=" crossorigin="anonymous"></script>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js"></script>
      <!-- Third party plugin JS-->
      <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.4.1/jquery.easing.min.js"></script>
      <script
        src="https://cdnjs.cloudflare.com/ajax/libs/magnific-popup.js/1.1.0/jquery.magnific-popup.min.js"></script>
      <!-- Core theme JS-->
      <script src="js/scripts.js"></script>
    </body>


</html>